# zmodload zsh/zprof

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.zshrc.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

export ZSH="$HOME/.oh-my-zsh"
eval "$(fnm env --use-on-cd --shell zsh)"

# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
plugins=(git zsh-vi-mode zsh-autosuggestions zsh-syntax-highlighting fnm)

function zvm_after_init() {
  bindkey -s "^f" "tmux-sessionizer\n"
}

source $ZSH/oh-my-zsh.sh

# p10k
source ~/powerlevel10k/powerlevel10k.zsh-theme
[[ ! -f ~/.p10k.zsh ]] || source ~/.p10k.zsh

# alias
alias c="clear"
alias vi="nvim"
alias lg="lazygit"
alias cd="z"
alias gemini="gemini -m pro"

# env
export EDITOR="nvim"
export PATH="$HOME/.scripts:$PATH"
export VCPKG_ROOT="$HOME/.tools/vcpkg"
export PATH=$VCPKG_ROOT:$PATH
export ROCM_PATH=/opt/rocm

# stuff
bindkey -M vicmd "k" up-line-or-beginning-search
bindkey -M vicmd "j" down-line-or-beginning-search
ZVM_LINE_INIT_MODE=$ZVM_MODE_INSERT
ZVM_VI_INSERT_ESCAPE_BINDKEY=jk

eval "$(zoxide init zsh)"

{% if yadm.os == "Darwin" %}
export JAVA_HOME=$(/usr/libexec/java_home)
# Created by `pipx` on 2025-11-21 10:00:27
export PATH="$PATH:/Users/stanislaw.olszewski/.local/bin"
export PYENV_ROOT="$HOME/.pyenv"
[[ -d $PYENV_ROOT/bin ]] && export PATH="$PYENV_ROOT/bin:$PATH"
eval "$(pyenv init - zsh)"
export POETRY_VIRTUALENVS_IN_PROJECT=true
export NODE_OPTIONS="--max-old-space-size=8192"

{% endif %}

function y() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")" cwd
	yazi "$@" --cwd-file="$tmp"
	IFS= read -r -d '' cwd < "$tmp"
	[ -n "$cwd" ] && [ "$cwd" != "$PWD" ] && builtin cd -- "$cwd"
	rm -f -- "$tmp"
}

function ly() {
    cd ~
    yadm enter lazygit
    cd -
}

